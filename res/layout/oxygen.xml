    <view android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          class="com.subrat.Oxygen.customviews.OxygenView" android:id="@+id/view" android:layout_gravity="center_horizontal"
          android:layout_weight="1"/>
    <TextView
